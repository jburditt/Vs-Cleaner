<Window x:Class="Vs_Cleaner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vs_Cleaner.Wpf"
        mc:Ignorable="d"
        Title="VS Cleaner" Height="234" Width="551">
    <Grid Margin="0,0,2,4">
        <Button x:Name="selectFolderButton" Content="Select project folder" HorizontalAlignment="Left" Margin="342,80,0,0" VerticalAlignment="Top" Width="131" Click="SelectFolderButton_Click" Height="28"/>
        <TextBox x:Name="projectFolderPath" HorizontalAlignment="Left" Height="28" Margin="57,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"/>
        <Button x:Name="cleanProjectButton" Content="Clean bin and obj" HorizontalAlignment="Left" Margin="342,123,0,0" VerticalAlignment="Top" Width="131" Click="cleanProjectButton_Click" Height="28"/>
        <Label Content="Folder Path" HorizontalAlignment="Left" Margin="57,49,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
